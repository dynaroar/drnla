START: 1;
FROM: 1;

      z := nondet();
      k := nondet();
      x := 1;
      y := 1;
      c := 1;
      p := 2;
      assume( c < k);
TO: 2;

FROM: 2;
      assume( c < k);
	p := 1;
TO: 3;

FROM: 3;
      c := c+1;
      x := x*z+1;
      y := y*z;
TO: 2;
 
FROM: 2;
      assume( c >= k);
      p := 0;
TO: 4;
